<%= turbo_stream_from "pas" %>

<main>
  
  <div class="header mb-5">
    <p class="fs-2">Projetos Atividades</p>
    <%= link_to "New Projeto", new_pa_path, data: { turbo_frame: dom_id(Pa.new) } %>
  </div>

  <div class="row">
    <div class="col-md-8 mx-auto">

      <%= turbo_frame_tag Pa.new %>
      <%= turbo_frame_tag "pas" do %>
        <%= render @pas %>
      <% end %>

    </div>
  </div>
  
</main>