<%= form_with(model: uo) do |form| %>
  <% if uo.errors.any? %>
    <div style="color: red">
      <h2><%= pluralize(uo.errors.count, "error") %> prohibited this uo from being saved:</h2>

      <ul>
        <% uo.errors.each do |error| %>
          <li><%= error.full_message %></li>
        <% end %>
      </ul>
    </div>
  <% end %>

  <div>
    <%= form.label :description, style: "display: block" %>
    <%= form.text_field :description %>
  </div>

  <div>
    <%= form.label :start_date, style: "display: block" %>
    <%= form.date_field :start_date %>
  </div>

  <div>
    <%= form.label :end_date, style: "display: block" %>
    <%= form.date_field :end_date %>
  </div>

  <div>
    <%= form.label :kind, style: "display: block" %>
    <%= form.text_field :kind %>
  </div>

  <div>
    <%= form.label :abbreviation, style: "display: block" %>
    <%= form.text_field :abbreviation %>
  </div>

  <div>
    <%= link_to "Cancel", uos_path, class: "btn btn--light" %>
    <%= form.submit %>
  </div>
<% end %>
