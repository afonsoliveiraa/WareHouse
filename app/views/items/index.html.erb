  <div class="row">
    <div class="col-md-6 mx-auto shadow-sm">

      <div class="header p-3">
        <%= link_to "New Item de despesa", new_item_path, data: { turbo_frame: dom_id(Item.new) } %>
      </div>
      
      <%= turbo_frame_tag Item.new %>
