<%= turbo_stream_from "people" %>

<main>
  
  <div class="row">
    <div class="col-md-6 mx-auto shadow-sm">

      <div class="header p-3">
        <%= link_to "New Pessoa", new_person_path, data: { turbo_frame: dom_id(Person.new) } %>
      </div>
      
      <%= turbo_frame_tag Person.new %>
      <%= turbo_frame_tag "people" do %>
        <%= render @people %>
      <% end %>

    </div>
  </div>
  
</main>

