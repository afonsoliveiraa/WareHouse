<%= turbo_stream_from "entries" %>

<main>
  
  <div class="row">
    <div class="col-md-6 mx-auto shadow-sm">

      <div class="header p-3">
        <%= link_to "New Entrada", new_entry_path, data: { turbo_frame: dom_id(Entry.new) } %>
      </div>
      
      <%= turbo_frame_tag Entry.new %>
      <%= turbo_frame_tag "entries" do %>
        <%= render @entries %>
      <% end %>

    </div>
  </div>
  
</main>

