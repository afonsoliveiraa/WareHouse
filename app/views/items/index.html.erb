<%= turbo_stream_from "items" %>

<main>
  
  <div class="header mb-5">
    <p class="fs-2">Items</p>
    <%= link_to "New Item", new_item_path, data: { turbo_frame: dom_id(Item.new) } %>
  </div>
 
  <div class="row">
    <div class="col-md-9 mx-auto ">
      
      <%= turbo_frame_tag Item.new %>
      <%= turbo_frame_tag "items" do %>
        <%= render @items %>
      <% end %>

    </div>
  </div>

  
</main>

