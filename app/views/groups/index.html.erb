<%= turbo_stream_from "groups" %>

<main>
  
  <div class="row">
    <div class="col-md-6 mx-auto shadow-sm">

      <div class="header p-3">
        <%= link_to "New Groupo", new_group_path, data: { turbo_frame: dom_id(Group.new) } %>
      </div>
      
      <%= turbo_frame_tag Group.new %>
      <%= turbo_frame_tag "groups" do %>
        <%= render @groups %>
      <% end %>

    </div>
  </div>
  
</main>

